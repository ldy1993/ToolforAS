    <attr name="right_view_text_color" format="color" />
    <attr name="right_view_width" format="dimension" />
  </declare-styleable>
  <declare-styleable name="AdContainerViewPager">
    <attr name="banner_1" format="reference" />
    <attr name="banner_2" format="reference" />
    <attr name="banner_3" format="reference" />
    <attr name="banner_4" format="reference" />
    <attr name="banner_5" format="reference" />
