<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="265dp"
    android:layout_height="152dp"
    android:background="@drawable/bg_process_dialog"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <com.ldy.view.CustomWidget.ProcessIcon.ProcessIcon
        android:id="@+id/iv_process_flag"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerInside"
        android:src="@drawable/comm"/>
    <TextView 
        android:id="@+id/process_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:layout_gravity="center_horizontal"
        android:text="解锁中，请稍候。。。"
        android:textColor="@color/heavy_gray"
        android:textSize="@dimen/txt_small"/>
</LinearLayout>
